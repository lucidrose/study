	<select id="selectSampleList" parameterType="searchVO" resultType="egovMap">

			SELECT
					BILLNUM
				  , NO
				  , D.USEDETAILNAME
				  , USEPRICE
				  , USEDATE
				  , APPROVEPRICE
				  , S.STATENAME
				  , STATEDATE
				  , ETC
				  , FILENAME
				  , FILEPATH
				  , REGDATE
				  , UPDATEDATE
			FROM TB_BILL B
			LEFT OUTER JOIN TB_USEDETAIL D
				 ON D.USEDETAILCODE = B.USEDETAILCODE
			LEFT OUTER JOIN TB_STATE S
				 ON S.STATECODE = B.STATECODE
			WHERE 1=1
			<!-- 등록연월 -->
			<!-- <if test="searchYm != null and searchYm != ''">
			    AND TO_CHAR()
			</if> -->
			<!-- 사용내역 -->
			<if test="searchDetailCode != null and searchDetailCode != ''">
				AND D.USEDETAILCODE = #{searchDetailCode, jdbcType=VARCHAR}    
			</if>
			<!-- 처리상태 -->
			<if test="searchStateCode != null and searchStateCode != ''">
				AND S.STATECODE = #{searchStateCode, jdbcType=VARCHAR}    
			</if>
			ORDER BY USEDATE DESC
	</select>

	<select id="selectSampleListTotCnt" parameterType="searchVO" resultType="int">

			SELECT COUNT(*) totcnt
			FROM TB_BILL
